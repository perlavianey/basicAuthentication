<form action="/signup" method="post">
  <p>
    <label for="username">Escribe tu username</label>
    <input type="text" name="username" id="username" value="{{userinput.username}}">
  </p>
  <p>
    <label for="password">Escribe una contraseña</label>
    <input type="password" name="password" id="password" value="{{userinput.password}}">
  </p>
  <p>
    <label for="password2">Repite tu contraseña</label>
    <input type="password" name="password2" id="password2" value="{{userinput.password2}}">
  </p>
  <input type="submit" value="Registrar">
</form>

<p>{{error}}</p>
<p>{{error.errmsg}}</p>
<p>{{warning}}</p>
<p>{{suggestions.[0]}}</p>